          <select name="category" id="">
            <option >Music</option>
            <option >Animation</option>
            <option >Action</option>
          </select>
        </div>
         </div>
         <div class="inputs1">
          <div class="input">
            <p>Choose cover photo</p>
          <input id="file" type="file" name="cover">
        </div>
          <div class="input">
            <p>Choose video file</p>
          <input id="file" name="video" type="file">
        </div>
        </div>
       
  
<div class="btn" style="display: flex; padding-top: 20px;margin-left: 0px;">
     <button style="  display: flex; width: 150px; height: 50px; justify-content: center;align-items: center; border-radius: 20px;">Upload Movies</button>
    </div>
  </div>
